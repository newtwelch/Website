<div class="@(IsOpen ? "" : "hidden") overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 bg-black bg-opacity-80 md:inset-0 h-full md:h-full">
    <div class="relative w-full px-10 py-8 sm:px-10 md:px-20 lg:px-30 xl:px-50 2xl:px-96 h-full">
        <button class="text-white absolute top-0 right-0 m-10 mr-15 hover:opacity-50" @onclick="Close">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
        </button>
        <!-- Modal content -->  
        <div class="flex flex-col gap-1 mt-20 md:m-20 md:gap-2 md:pb-40 ">
            @ChildContent
        </div>
    </div>
</div>


@code {

    [Parameter] public RenderFragment ChildContent { get; set; }

    [Parameter] public bool IsOpen { get; set; } = true;

    [Parameter] public string ModalClass { get; set; }

    [Parameter] public List<string> Gallery { get; set; }

    public void Close() => IsOpen = false;
}   